<LightInstallation>
	<InheritsFrom>config/MutateCore.xml</InheritsFrom>
	<InheritsFrom>config/bridgeConfig/BridgeCore.xml</InheritsFrom>
    <InstallationConfiguration>
        <Defaults>
            <PixelMapper>simplemap</PixelMapper>
        </Defaults>
    </InstallationConfiguration>
    <PixelMapperConfiguration>
        <PixelMapper>
            <Class>pixelmappers.SimpleMapper</Class>
            <Args>
                <Id>simplemap</Id>
                <CutoffDist>20</CutoffDist>
            </Args>
        </PixelMapper>
        <PixelMapper>
            <Class>pixelmappers.GaussianMapper</Class>
            <Args>
                <Id>gaussmapfixed</Id>
                <CutoffDist>20</CutoffDist>
                <MinWeight>0.1</MinWeight>
                <Width>8</Width>
                <Height>1</Height>
            </Args>
        </PixelMapper>
        <PixelMapper>
            <Class>pixelmappers.GaussianMapper</Class>
            <Args>
                <Id>gaussmapmove</Id>
                <CutoffDist>25</CutoffDist>
                <MinWeight>0.1</MinWeight>
                <Width>12</Width>
                <Height>1</Height>
            </Args>
        </PixelMapper>
    </PixelMapperConfiguration>
    <InputConfiguration>
        <InputElement>
            <Class>inputs.UDPInput</Class>
            <Args>
                <Id>udp</Id>
                <Port>3344</Port>
                <RefreshInterval>100</RefreshInterval>
            </Args>
        </InputElement>
        <InputElement>
            <Class>inputs.RandomLocs</Class>
            <Args>
                <Id>randomLoc</Id>
		<MinX>100</MinX>
		<MinY>10</MinY>
		<MaxX>200</MaxX>
		<MaxY>40</MaxY>
		<Interval>200</Interval>
            </Args>
        </InputElement>
	<InputElement>
	  <Class>inputs.PedestrianSimulator</Class>
	  <Args>
	    <Id>pedsim</Id>
            <MaxX>700</MaxX>
            <Velocity>20</Velocity>
            <NumSensors>100</NumSensors>
            <SensorSpacing>48</SensorSpacing>
            <NumPeds>1</NumPeds>
	  </Args>
	</InputElement>
        <InputElement>
            <Class>inputs.SensorNetworkToLocation</Class>
            <Args>
                <Id>netloc</Id>
                <SensorNetworkId>pedsim</SensorNetworkId>
                <SensorSpacing>48</SensorSpacing>
		<!--<Mode>SensorNetwork</Mode>-->
		<Y>15</Y>
                <RefreshInterval>100</RefreshInterval>
            </Args>
        </InputElement>
	<!--<InputElement>
            <Class>inputs.FixedSensorLocations</Class>
            <Args>
                <Id>sensorloc</Id>
                <SensorNumber>20</SensorNumber>		
                <SensorSpacing>192</SensorSpacing>
		<Y>15</Y>
		<RefreshInterval>100</RefreshInterval>
            </Args>
        </InputElement>	-->
    </InputConfiguration>
    <BehaviorConfiguration>
        <Behavior Id="colorchange">
            <InheritsFrom>behaviors/RandomColor.xml</InheritsFrom>
        </Behavior>
        <Behavior Id="decay">
            <InheritsFrom>behaviors/PixelPulse.xml</InheritsFrom>
	    <Args>
	      <Duration>800</Duration>
	      <Coefficient>0.001</Coefficient>
	    </Args>
        </Behavior>
	<Behavior>
	  <Class>behaviors.MonitoredMover</Class>
	  <Args>
	    <Id>mmover</Id>
	    <IntervalCount>0</IntervalCount>
	  </Args>
	</Behavior>
	<Behavior>
	  <Class>behaviors.TDMAMover</Class>
	  <Args>
	    <Id>tdmamover</Id>
	  </Args>
	</Behavior>
	<Behavior>
	  <Class>behaviors.HorizontalClone</Class>
	  <Args>
	    <Id>hclone</Id>
	    <StepSize>48</StepSize>
	    <Times>6</Times>
	  </Args>
	</Behavior>

	<!--BOOM BEHAVIOR-->
        <Behavior>
            <Class>behaviors.Boom</Class>
            <Args>
                <Id>boom</Id>
                <Inputs>
		  <Id>randomLoc</Id>
		  <Id>decay</Id>
		</Inputs>
		<MaxRadius>50</MaxRadius>
		<StepSize>10</StepSize>
		<RenderToScreen>False</RenderToScreen>		
            </Args>
        </Behavior>

	<!--PED-FIREFLY BEHAVIOR-->
        <Behavior Id="recursivedecay" InitialResponseCount="6">
            <InheritsFrom>behaviors/LoopAndDie.xml</InheritsFrom>
        </Behavior>
        <Behavior>
            <Class>behaviors.RandomWalk</Class>
            <Args>
                <Id>randmovement</Id>
                <StepSize>12</StepSize>
            </Args>
        </Behavior>
	<Behavior>
	  <Class>behaviors.Flasher</Class>
	  <Args>
	    <Id>flasher</Id>
	  </Args>
	</Behavior>
        <Behavior>
            <Class>behaviors.BehaviorChain</Class>
            <Args>
                <Id>flashermovebounce</Id>
                <ChainedBehaviors>
                    <Id>randmovement</Id>
		    <Id>recursivedecay</Id>
                </ChainedBehaviors>
            </Args>
        </Behavior>
        <Behavior>
            <Class>behaviors.RandomSetBrightColorBehavior</Class>
            <Args>
                <Id>setbrightcolor</Id>
            </Args>
        </Behavior>
        <Behavior>
            <Class>behaviors.BehaviorChain</Class>
            <Args>
                <Id>fireflies</Id>
                <Inputs>
                    <Id>netloc</Id>
                </Inputs>
                <ChainedBehaviors>
                    <Id>setbrightcolor</Id>
                    <Id>mmover</Id>
                    <Id>decay</Id>
                </ChainedBehaviors>
                <RecursiveHooks>{'mmover':'flashermovebounce'}</RecursiveHooks>
                <RenderToScreen>True</RenderToScreen>
                <Mapper>gaussmapmove</Mapper>
            </Args>
        </Behavior>


	<!-- FIXED FIREFLY BEHAVIOR-->	
        <Behavior Id="recursivedecay1" InitialResponseCount="10">
            <InheritsFrom>behaviors/LoopAndDie.xml</InheritsFrom>
        </Behavior>
        <Behavior>
            <Class>behaviors.RandomSetColorBehavior</Class>
            <Args>
                <Id>setdimcolor</Id>
		<Dimness>0.3</Dimness>
            </Args>
        </Behavior>
        <Behavior>
            <Class>behaviors.RandomWalk</Class>
            <Args>
                <Id>randmovement1</Id>
                <StepSize>8</StepSize>
            </Args>
        </Behavior>
        <Behavior>
            <Class>behaviors.BehaviorChain</Class>
            <Args>
                <Id>flashermovebounce1</Id>
                <ChainedBehaviors>
                    <Id>randmovement1</Id>
		    <Id>recursivedecay1</Id>
                </ChainedBehaviors>
            </Args>
        </Behavior>
        <Behavior>
            <Class>behaviors.BehaviorChain</Class>
            <Args>
                <Id>staticfireflies</Id>
                <Inputs>
                    <Id>netloc</Id>
                </Inputs>
                <ChainedBehaviors>
		    <Id>hclone</Id>
                    <Id>setdimcolor</Id>
                    <Id>mmover</Id>
                    <Id>decay</Id>
                </ChainedBehaviors>
                <RecursiveHooks>{'mmover':'flashermovebounce1'}</RecursiveHooks>
                <RenderToScreen>True</RenderToScreen>
                <Mapper>gaussmapfixed</Mapper>
            </Args>
        </Behavior>

    </BehaviorConfiguration>
</LightInstallation>
