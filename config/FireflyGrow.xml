<LightInstallation>
	<InheritsFrom>config/MutateCore.xml</InheritsFrom>
	<InheritsFrom>config/bridgeConfig/BridgeCore.xml</InheritsFrom>
    <InstallationConfiguration>
        <Defaults>
            <PixelMapper>simplemap</PixelMapper>
        </Defaults>
    </InstallationConfiguration>
    <!--<PixelConfiguration>
        <InheritsFrom>layouts/10kLayout/10kLayout.xml</InheritsFrom>
    </PixelConfiguration>-->
    <PixelMapperConfiguration>
        <PixelMapper>
            <Class>pixelmappers.SimpleMapper</Class>
            <Args>
                <Id>simplemap</Id>
                <CutoffDist>20</CutoffDist>
            </Args>
        </PixelMapper>
        <PixelMapper>
            <Class>pixelmappers.GaussianMapper</Class>
            <Args>
                <Id>gaussmap</Id>
                <CutoffDist>20</CutoffDist>
                <MinWeight>0.1</MinWeight>
                <Width>8</Width>
                <Height>1</Height>
            </Args>
        </PixelMapper>
        <PixelMapper>
            <Class>pixelmappers.GaussianMapper</Class>
            <Args>
                <Id>gaussmap1</Id>
                <CutoffDist>20</CutoffDist>
                <MinWeight>0.1</MinWeight>
                <Width>8</Width>
                <Height>1</Height>
            </Args>
        </PixelMapper>
    </PixelMapperConfiguration>
    <!--<RendererConfiguration>
        <Renderer>
            <InheritsFrom>renderers/Pygame.xml</InheritsFrom>
        </Renderer>
    </RendererConfiguration>-->
    <InputConfiguration>
        <InputElement>
            <Class>inputs.PygameInput</Class>
            <Args>
                <Id>pygame</Id>
                <RefreshInterval>10</RefreshInterval>
                <Clicks>True</Clicks>
            </Args>
        </InputElement>
        <InputElement>
            <Class>inputs.RandomLocs</Class>
            <Args>
                <Id>randomLoc</Id>
		<MinX>100</MinX>
		<MinY>10</MinY>
		<MaxX>200</MaxX>
		<MaxY>40</MaxY>
		<Interval>200</Interval>
            </Args>
        </InputElement>
	<InputElement>
	  <Class>inputs.PedestrianSimulator</Class>
	  <Args>
	    <Id>pedsim</Id>
            <MaxX>3000</MaxX>
            <Velocity>200</Velocity>
            <NumSensors>15</NumSensors>
            <SensorSpacing>144</SensorSpacing>
            <NumPeds>1</NumPeds>	   
	  </Args>
	</InputElement>
        <InputElement>
            <Class>inputs.SensorNetworkToLocation</Class>
            <Args>
                <Id>netloc</Id>
                <SensorNetworkId>pedsim</SensorNetworkId>
                <SensorSpacing>144</SensorSpacing>
		<Y>15</Y>
		<RefreshInterval>100</RefreshInterval>
            </Args>
        </InputElement>
	<InputElement>
            <Class>inputs.FixedSensorLocations</Class>
            <Args>
                <Id>sensorloc</Id>
                <SensorNumber>15</SensorNumber>		
                <SensorSpacing>144</SensorSpacing>
		<Y>15</Y>
		<RefreshInterval>500</RefreshInterval>
            </Args>
        </InputElement>	
    </InputConfiguration>
    <BehaviorConfiguration>
        <Behavior Id="colorchange">
            <InheritsFrom>behaviors/RandomColor.xml</InheritsFrom>
        </Behavior>
        <Behavior Id="decay">
            <InheritsFrom>behaviors/PixelDecay.xml</InheritsFrom>
	    <Args>
	      <Coefficient>0.004</Coefficient>
	    </Args>
        </Behavior>
        <Behavior Id="slowdecay">
            <InheritsFrom>behaviors/PixelDecay.xml</InheritsFrom>
	    <Args>
	      <Coefficient>0.001</Coefficient>
	    </Args>
        </Behavior>

	<!--BOOM BEHAVIOR-->
        <Behavior>
            <Class>behaviors.Boom</Class>
            <Args>
                <Id>boom</Id>
                <Inputs>
		  <Id>randomLoc</Id>
		  <Id>decay</Id>
		</Inputs>
		<MaxRadius>50</MaxRadius>
		<StepSize>10</StepSize>
		<RenderToScreen>False</RenderToScreen>		
            </Args>
        </Behavior>

	<!--PED-FIREFLY BEHAVIOR-->
	<Behavior>
	  <Class>behaviors.ModifyMapper</Class>
	  <Args>
	    <Id>momapper</Id>
	    <MapperId>gaussmap1</MapperId>
	    <WidthChange>16</WidthChange>
	    <CutoffDistChange>30</CutoffDistChange>
	  </Args>
	</Behavior>	      
        <Behavior Id="recursivedecay" InitialResponseCount="10">
            <InheritsFrom>behaviors/LoopAndDie.xml</InheritsFrom>
        </Behavior>
        <Behavior>
            <Class>behaviors.RandomWalk</Class>
            <Args>
                <Id>randmovement</Id>
                <StepSize>5</StepSize>
            </Args>
        </Behavior>
	<Behavior>
	  <Class>behaviors.Flasher</Class>
	  <Args>
	    <Id>flasher</Id>
	  </Args>
	</Behavior>
        <Behavior>
            <Class>behaviors.BehaviorChain</Class>
            <Args>
                <Id>flashermovebounce</Id>
                <ChainedBehaviors>
                    <Id>randmovement</Id>
		    <Id>flasher</Id>
		    <Id>momapper</Id>
		    <Id>recursivedecay</Id>
                </ChainedBehaviors>
            </Args>
        </Behavior>
        <Behavior>
            <Class>behaviors.RandomSetBrightColorBehavior</Class>
            <Args>
                <Id>setbrightcolor</Id>
            </Args>
        </Behavior>
        <Behavior>
            <Class>behaviors.ResponseMover</Class>
            <Args>
                <Id>mover</Id>
            </Args>
        </Behavior>
        <Behavior>
            <Class>behaviors.BehaviorChain</Class>
            <Args>
                <Id>fireflies</Id>
                <Inputs>
                    <Id>netloc</Id>
                </Inputs>
                <ChainedBehaviors>
                    <Id>setbrightcolor</Id>
                    <Id>mover</Id>
                </ChainedBehaviors>
                <RecursiveHooks>{'mover':'flashermovebounce'}</RecursiveHooks>
                <RenderToScreen>True</RenderToScreen>
                <Mapper>gaussmap1</Mapper>
            </Args>
        </Behavior>


	<!-- FIXED FIREFLY BEHAVIOR-->	
        <Behavior Id="recursivedecay1" InitialResponseCount="10">
            <InheritsFrom>behaviors/LoopAndDie.xml</InheritsFrom>
        </Behavior>
        <Behavior>
            <Class>behaviors.RandomSetColorBehavior</Class>
            <Args>
                <Id>setdimcolor</Id>
		<Dimness>0.3</Dimness>
            </Args>
        </Behavior>
        <Behavior>
            <Class>behaviors.RandomWalk</Class>
            <Args>
                <Id>randmovement1</Id>
                <StepSize>5</StepSize>
            </Args>
        </Behavior>
        <Behavior>
            <Class>behaviors.ResponseMover</Class>
            <Args>
                <Id>mover1</Id>
            </Args>
        </Behavior>
        <Behavior>
            <Class>behaviors.BehaviorChain</Class>
            <Args>
                <Id>flashermovebounce1</Id>
                <ChainedBehaviors>
                    <Id>randmovement1</Id>
		    <Id>flasher</Id>
		    <Id>recursivedecay1</Id>
                </ChainedBehaviors>
            </Args>
        </Behavior>
        <Behavior>
            <Class>behaviors.BehaviorChain</Class>
            <Args>
                <Id>staticfireflies</Id>
                <Inputs>
                    <Id>sensorloc</Id>
                </Inputs>
                <ChainedBehaviors>
                    <Id>setdimcolor</Id>
                    <Id>mover1</Id>
                    <Id>decay</Id>
                </ChainedBehaviors>
                <RecursiveHooks>{'mover1':'flashermovebounce1'}</RecursiveHooks>
                <RenderToScreen>True</RenderToScreen>
                <Mapper>gaussmap</Mapper>
            </Args>
        </Behavior>

    </BehaviorConfiguration>
</LightInstallation>
